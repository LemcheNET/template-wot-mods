
// Сессионная статистика
// Session statistic
"sessionStatistic": {

	// Сообщение на случай отсутствия проведенных боев за сессию.
	// Message in case of absence spent battles for session.
	"needBattleToProcess": "<p align='center'><br><font face='$TitleFont' size='15' color='#E9E2BF'>PMOD - Сессионная статистика</font><br><br><font size='13'>{{UM:helloMessage}}, для отображения изменений в статистике нужно провести хотя бы один бой!</font></p>",
	
	// Подложка сообщения
	// Message background
	"messageBackground": {
		
		// true - Использовать подложку
		// true - Use a substrate
		"enable": true,
		
		// Путь к изображению с поддержкой макросов (сыгран хотя бы один бой)
		// Path to an image with support for macros (played at least one fight)
		"path": "../../scripts/client/mods/PMOD/skins/Antoshkaaa/icons/WinRate{{c:WinRate}}.png",
		
		// Путь к изображению без поддержки макросов (нет ни одного боя)
		// Path to an image without macros (not played any battles)
		"pathNullBattles": "../../scripts/client/mods/PMOD/skins/Antoshkaaa/icons/BackgroundNull.png"
	},
	
	// Иконка сообщения
	// Message icon
	"messageIcon": {

		// true - Использовать иконку
		// true - Use a icon
		"enable" : true, 
		
		// Путь к изображению с поддержкой макросов (сыгран хотя бы один бой)
		// Path to an image with support for macros (played at least one fight)
		"path": "../maps/icons/library/PersonalAchievementsIcon-1.png",
	
		// Путь к изображению без поддержки макросов (нет ни одного боя)
		// Path to an image without macros (not played any battles)
		"pathNullBattles": "../maps/icons/library/PersonalAchievementsIcon-1.png"
	},
	
	// Кнопка обнуления статистики
	// Reset statistic button 
	"resetButton": {
	
		// true - Отображать кнопку
		// true - Display button
		"enable": false,
						
		// Надпись на кнопке
		// Button text
		"label": "Сброс",
			
		// Цвет кнопки
		// standart - стандартный, black - чёрный
		// Button color
		// standart, black
		"type": "black",
		
		// Шырина кнопки
		// Button width
		"width": 110
	},
	
	// Заготовка сообщения. Список макросов смотрите в файле readme. Также можно использовать пользовательские макросы
	// The blank message. List of macros watch in readme file. You can also use users macros
	"template":[
                "<textformat tabstops='[115,175]'>",
                "Побед/боёв:<font color='#d3dad3'><tab>{{Wins}} / {{Battles}}<tab><font color='{{c:WinRate}}'><font color='{{c:Battles}}'>{{WinRate}}%{{UM:wins40x32}}<tab></font></font></font>\n",
                "Опыт:<font color='#d3dad3'><tab>{{XP}} {{UM:XpIcon-1}}<tab>{{AvgXP}} <tab></font>\n",
				"Своб.опыт:<font color='#d3dad3'><tab><font color='{{c:FreeXP}}'>{{FreeXP}}</font> {{UM:FreeXpIcon-1}}<tab></font>\n\n",
				"Уничтожено:<font color='#d3dad3'><tab>{{Frags}} {{UM:maxDestroyed40x32}}<tab>{{FragsRatio}}</font>\n",
				"Попад./выстр.:<font color='#d3dad3'><tab>{{Hits}} / {{Shots}}{{UM:hits40x32}}<tab><font color='{{c:HitsRate}}'><font color='{{c:Battles}}'>{{HitsRate}}%</font></font></font>\n",
				"Урона нанесено:<font color='#d3dad3'><tab>{{DamageDealt}}<tab>{{DamageRatio}}</font>\n",
				"Урона получено:<font color='#d3dad3'><tab>{{PotentialDamageReceived}}</font>\n",
				"Урон по разв/гусл:<font color='#d3dad3'><tab>{{DamageAssistedRadio}}<tab>{{DamageAssistedTrack}}</font>\n",
				"Захват/защита:<font color='#d3dad3'><tab>{{CapturePoints}}<tab>{{DroppedCapturePoints}}</font>\n",
				"Обнаружено:<font color='#d3dad3'><tab>{{SpottedEnemies}}</font> {{UM:SpottedEnemies}}\n\n",
				"Кредиты / золото:<font color='#d3dad3'><tab><font color='{{c:PureCredits}}'>{{PureCredits}}</font> {{UM:CreditsIcon-2}}<tab><font color='{{c:AccountGold}}'>{{AccountGold}}</font> {{UM:GoldIcon-2}}<tab></font></textformat>\n"
            ],

	// Список цветовых подстановок. "название_макроса": [{"value": значение,  "color": "#код_цвета"}, {"value": значение,  "color": "#код_цвета"}]
	// List of color permutations. "macro_name": [{"value": value,  "color": "#color_code"}, {"value": value,  "color": "#color_code"}]
	"colors": {
                    "WinRate": [
                        { "value": 48,  "color": "#ee2222" },
                        { "value": 53,  "color": "#d3dad3" },
                        { "value": 101, "color": "#83be46" }
                    ],
                    "SpottedEnemies": [
                        { "value": 1,   "color": "#d3dad3" },
                        { "value": 999, "color": "#83be46" }
                    ],					
                    "": [
                        { "value": 1,  "color": "#d6c598" },					
					    { "value": 2,  "color": "#FF6262" },					
					    { "value": 3,  "color": "#FFA462" },
                        { "value": 5,  "color": "#EEFF62" },
                        { "value": 7,  "color": "#62FF78" },
                        { "value": 9,  "color": "#62BEFF" },
                        { "value": 11, "color": "#BE62FF" }	
                    ],						
					"Battles": [
                        { "value": 1,  "color": "#d3dad3" }
                    ],
					"HitsRate": [
                        { "value": 50,  "color": "#ee2222" },
                        { "value": 65,  "color": "#d3dad3" },
                        { "value": 101, "color": "#83be46" }
                    ],				
                    "FreeXP": [
                        { "value": 0,         "color": "#ee2222" },
						{ "value": 999999999, "color": "#d3dad3" }
					],					
                    "PureCredits": [
                        { "value": 0,         "color": "#ee2222" },
                        { "value": 1, 		  "color": "#d3dad3" },
						{ "value": 999999999, "color": "#83be46" }
					],	
					"AccountGold": [
                        { "value": 0,         "color": "#ee2222" },
						{ "value": 1,         "color": "#d3dad3" },
                        { "value": 999999999, "color": "#FFE769" }
					],
					"DamageRatio": [
                        { "value": 0.3,       "color": "#1a1813" },
						{ "value": 1,         "color": "#1c1a15" },
						{ "value": 2,         "color": "#1f1d17" },
						{ "value": 3,         "color": "#211f19" },
                        { "value": 999999999, "color": "#24211b" }
					],
					"Frags": [
                        { "value": 6,          "color": "#030303" },
						{ "value": 12,         "color": "#050505" },
						{ "value": 18,         "color": "#080808" },
						{ "value": 24,         "color": "#0a0a0a" },
						{ "value": 30,         "color": "#0d0d0d" },
						{ "value": 36,         "color": "#0f0f0f" },
						{ "value": 42,         "color": "#121212" },
						{ "value": 48,         "color": "#141414" },
						{ "value": 54,         "color": "#171717" },
						{ "value": 60,         "color": "#1a1a1a" },
                        { "value": 999999999,  "color": "#1c1c1c" }	
                    ]
	},

	// Пользовательские макросы
	// Custom macros
	"userMacros": {
		"UM:wins40x32": "<img src='img://gui/maps/icons/library/dossier/wins40x32.png' width='16' height='16' align='baseline' vspace='-6'>",
		"UM:XpIcon-1": "<img src='img://gui/maps/icons/library/XpIcon-1.png' width='16' height='16' align='baseline' vspace='-3'>",
		"UM:avgExp40x32": "<img src='img://gui/maps/icons/library/dossier/avgExp40x32.png' width='16' height='16' align='baseline' vspace='-3'>",
		"UM:FreeXpIcon-1": "<img src='img://gui/maps/icons/library/FreeXpIcon-1.png' width='16' height='16' align='baseline' vspace='-3'>",
		"UM:maxDestroyed40x32": "<img src='img://gui/maps/icons/library/dossier/maxDestroyed40x32.png' width='20' height='16' align='baseline' vspace='-5'>",
		"UM:hits40x32": "<img src='img://gui/maps/icons/library/dossier/hits40x32.png' width='20' height='16' align='baseline' vspace='-5'>",
		"UM:SpottedEnemies": "<img src='img://scripts/client/mods/PMOD/skins/Antoshkaaa/icons/{{c:SpottedEnemies}}.png' width='16' height='16' lign='baseline' vspace='-5'>",
		"UM:CreditsIcon-2": "<img src='img://gui/maps/icons/library/CreditsIcon-2.png' width='16' height='16' align='baseline' vspace='-4'>",
