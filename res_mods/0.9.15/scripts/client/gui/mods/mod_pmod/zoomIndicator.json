/*
	Зум индикатор.
	Zoom indicator.
*/
{
	
	// true - включить модуль.
	// true - enable the module.
	"enable" : false,
	
	// Двигатся за интерфейсом (интерфейс игры двигается если динамическая камера включена)
	// Move for the interface (game interface moves if the dynamic camera is turned on)
	"trackUI": false,

	// Позиция индикатора на экране
	// Перевернутая по высоте декартовая система координат в пикселях, с отчетом, от центра экрана
	// Indicator position on the screen
	// Inverted adjustment cartesian coordinate system in pixels, with a report from the center of the screen
	"position" : [240, -18],

	// Текст надписи индикатора
	// Вместо {{zoom}} будет подставлено текущее значение кратности
	// Label text indicator
	// Instead of {{zoom}} will be inserted the current value of multiplicity
	"pattern" : "x{{zoom}}",

	// Выравнивание надписи индикатора
	// Alignment label indicator
	"align" : "left",

	// Прозрачность надписи индикатора. Oт 0 - прозрачный до 10 непрозрачный
	// Transparency label indicator. From 0 - transparent to 10 not transparent
	"alpha" : 10,

	// Цвет надписи индикатора. Значение цвета в палитре RGB (красный, зелёный, синий)
	// Color label indicator. Value colors in the RGB (red, green, blue)
	"color" : "6BF40D",

	// Шрифт надписи индикатора
	// Font label indicator
	"font" : "$FieldFont",

	// Размер шрифта надписи индикатора
	// label font size indicator
	"size" : 18,

	// Настройки тени текста  надписи индикатора
	// Shadow settings label text indicator
	"shadow" : {

		// Прозрачность тени. Oт 0 - прозрачный до 10 непрозрачный
		// Transparency shadow. From 0 - transparent to 10 not transparent
		"alpha" : 9,

		// Размытые тени. Oт 0 - не размыта до 10 размыта
		// Blurry shadows. From 0 - not blurred to 10 blurred
		"blur" : 10,

		// Цвет тени. Значение цвета в палитре RGB (красный, зелёный, синий)
		// Color тени. Value colors in the RGB (red, green, blue)
		"color" : "000000",

		// Сила тени. Oт 0 - слабая до 10 сильная
		// Strength shadows. From 0 - not strength to 10 strength
		"strength" : 5,

		// Дистанция отступа от основного текста
		// Indentation distance from the main text
		"distance" : 0,

		// Угол в котором движется тень
		// The angle in which the motion of the shadow
		"angle" : 0
	}
}