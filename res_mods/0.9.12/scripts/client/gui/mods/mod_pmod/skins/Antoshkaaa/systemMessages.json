			"UM:draw": "<font color='#e4ddc0' size='15'>Ничья</font>\n",
			"UM:Map": "<font size='14'>Карта: {{Map}}</font>\n",
			"UM:VehicleLocalName": "<font size='14'>Танк: {{VehicleLocalName}}</font>\n",
			"UM:XP": "<font size='14'>Опыт / экипажу: <font color='#c2c0c3'>{{XP}} / {{TmenXP}}</font></font> <img src='img://gui/maps/icons/library/XpIcon-1.png' width='16' height='16' align='baseline' vspace='-3'> <font size='12'>{{DailyXPFactor}}</font>\n",
			"UM:FreeXP": "<font size='14'>Свободный опыт: <font color='#c2c0c3'>{{FreeXP}}</font> <img src='img://gui/maps/icons/library/FreeXpIcon-1.png' width='16' height='16' align='baseline' vspace='-3'></font>\n",
			"UM:PureCredits": "\n<font size='14'>Кредиты: <font color='{{c:PureCredits}}'>{{PureCredits}}</font>  <img src='img://gui/maps/icons/library/CreditsIcon-2.png' width='16' height='16' align='baseline' vspace='-4'></font>\n",
			"UM:Credits": "<font size='14'>Получено кредитов: <font color='#c2c0c3'>{{Credits}}</font></font>\n",
			"UM:Achievements": "\n{{Achievements}}"
		},
		
		// Список цветовых подстановок. "название_макроса": [{"value": значение,  "color": "#код_цвета"}, {"value": значение,  "color": "#код_цвета"}]
		// List of color permutations. "macro_name": [{"value": value,  "color": "#color_code"}, {"value": value,  "color": "#color_code"}]
		"colors": {
