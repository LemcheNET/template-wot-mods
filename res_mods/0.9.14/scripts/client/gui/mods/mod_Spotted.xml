<!-- OldSkools Spotted Mod - Client: 0.9.10 -->
<!-- http://www.statswhore.net -->

<mod_Spotted.xml>

	<!-- Show Welcome Message in System Center -->
	<welcomeMsg>True</welcomeMsg>

	<!-- En/Disable the Spotted Mod by Default -->
	<modActive>True</modActive>

	<!-- HotKey to turn the Mod Ingame on/off -->
	<hotKey>KEY_F11</hotKey>

    <!-- Enabled for the following vehicles: -->
    <!-- HeavyTank, MediumTank, LightTank, AT-SPG, SPG -->
	<enabledForVehType>HeavyTank, MediumTank, LightTank, AT-SPG, SPG</enabledForVehType>

    <!-- Message when Spotted: -->
    <message>Im Spotted at {cell}.</message>

    <!-- Use Platoon Chat if available: -->
    <useSquadChat>1</useSquadChat>

    <!-- Activate Help (F7) when Spotted: -->
    <helpMeOption>0</helpMeOption>

    <!-- Ping on Minimap Cell when Spotted: -->
    <cellClickOption>1</cellClickOption>

	<!-- Unspotted Notification: -->
    <timeEndMessage>10</timeEndMessage>
    <endMessage>You are {time} seconds unspotted. You should be save!</endMessage>
	
</mod_Spotted.xml>

