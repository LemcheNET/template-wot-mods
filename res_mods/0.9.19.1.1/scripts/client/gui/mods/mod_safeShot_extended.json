{
	"safeShot": {
		"disableKey": "KEY_LALT", // The key to turn off the mod
		
		/* Switch blocking the shot on the destroyed tanks */
		"deadShot": {
			"blockShot": true,				// Enabling or disabling an element (true - enabled, false - disabled)
			"blockTimeout": 5.0				// The time to block the fire on the target after it was destroyed
		},
		
		/* Toggle Allies Lock Switch */
		"teamShot": {
			"blockShot": true,				// Enabling or disabling an element (true - enabled, false - disabled)
			"blockBlueShot": false,				// Block the shooting on the "stuffed cabbage" allies
			"blockSquadShot": false,			// Block shooting on the team
			"sendChatMessage": true,			// Block shooting on the team...
			"chatMessageInterval": 5.0,			// The interval for sending the same messages
			"considerGunDirection": true,			// Take into account the direction of the implement (if the contour is not highlighted)
			"chatMessage": "{name}{clan} ({vehicle}), Do not bother to shoot >=O!"	// Message text. The macros {name} are the name of the player, {clan} is the player's clan and {vehicle} is the player's tank
		},
		
		/* Switch for blocking a useless shot */
		"wasteShot": {
			"blockShot": false,				// Enabling or disabling an element (true - enabled, false - disabled)
			"aimMode": ["arcade", "sniper", "strategic"]	// Arcade - arcade mode, sniper - sniper mode, strategic - art mode
		},
		
		/* The message above the sight when the shot is blocked */
		"shotBlock": {
			"blockMessage": true,				// Enabling or disabling an element (true - enabled, false - disabled)
			"reason": {
				"teamShot":  "teamShot",		// Fire on the Allies
				"deadShot":  "deadShot",		// Shooting in the corpse
				"wasteShot": "wasteShot"		// Shooting is notorious for the purpose
			},
			"shotBlockMessage": "[{reason}] Shot blocked."	// Message text. Enabled macros {reason} - type of blocked shot
		}
	}
}