		// Паттерны макросов.
		// Macro patterns.
		"macrosFormatter": {
				
			// Множитель опыта. {{val}} - подставляется значение множителя.
			// Modifier experience. {{val}} - replaced with the value factor.
			"dailyXPFactor": "(<font color='#FFCC66'>x{{val}}</font>)",
				
			// Штраф за нанесение урона союзникам. {{val}} - подставляется значение кредитов.
			// Penalty for dealing damage allies. {{val}} - replaced with the value of loans.
			"creditsPenalty": "<font color='#F06060'>Штраф: {{val}}</font>\n",
				
			// Компенсация за урон полученный от союзника. {{val}} - подставляется значение кредитов.
			// Compensation for damage resulting from an ally. {{val}} - replaced with the value of loans.
			"creditsCompensation": "<font color='#70CC70'>Компенсация: {{val}}</font>\n",	

			// Штраф за нанесение урона союзникам. {{val}} - подставляется значение опыта.
			// Penalty for dealing damage allies. {{val}} - replaced with the value of XP.
			"xpPenalty": "<font color='#F06060'>Штраф: {{val}}</font>\n",

                        // Рейтинг урона (% величина отметок на стволе). {{val}} - подставляется значение рейтинга.
			// Damage кating (gum marks % value). {{val}} - replaced with the value of rating.
                        "damageRating" : "{{val}}%",		
				
			// Макрос для отображения медалей
			// Macro to display the medals
			"achievements": {
					
				// #1 Начальная обработка медали. 
				// {{name}} - имя медали, {{localName}} - локализованное имя медали, {{icon}} - иконка медали размером 67х71
				// #1 The initial treatment medals. 
				// {{Name}} - name of the medal, {{localName}} - localized name of the medal, {{icon}} - medal icon 67х71.
				"pattern": "{{localName}}",
					
				// #2 Разделитель. Все медали соединяются в одну строку и между ними ставится разделитель.
				// #2 separator. Аll medals combined in one line and put a separator between them.
				"separator": ", ",
					
				// #3 Финальный результат макроса. {{pattern}} - сюда подставится готовая строка с медалями.
				// #3 The final result of the macro. {{pattern}} - will be substituted here ready line with medals.
				"result": "<textformat leading='-10'> </textformat>\nДостижения: <font color='#02C9B3'>{{pattern}}</font>"
			}
		},
			
		// Настройка внешнего вида кнопок в сообщениях
		// Customize the style of the button in the message
		"buttons": {
				
			// Надпись на кнопке
			// Label ob button
			"label": "Подробнее",
				
			// Цвет кнопки
			// standart - стандартный, black - чёрный
			// Button color
			// standart, black
			"type": "standart",
			
			// Шырина кнопки
			// Button width
			"width": 110
		},
			
		// Пользовательские макросы
		// Custom macros
		"userMacros": {
			"SM:win": "<textformat leading='4'><font color='#00CC00'>ПОБЕДА!</font></textformat>\n",
			"SM:defeat": "<textformat leading='4'><font color='#F01818'>ПОРАЖЕНИЕ</font></textformat>\n",
			"SM:draw": "<textformat leading='4'><font color='#FFAA00'>НИЧЬЯ</font></textformat>\n",
			"SM:map": "<textformat leading='4'><font color='#D6D7D4'>{{Map}}</font></textformat>\n",
			"SM:vehicle": "<font color='#FFCC66'>{{VehicleLocalNameShort}}</font>\n",
			"SM:xp": "Опыт за бой: <font color='#D6D7D4'>{{XP}}</font> {{DailyXPFactor}}\n",
			"SM:tmenXP": "Опыт экипажу: <font color='#D6D7D4'>{{TmenXP}}</font>\n",
			"SM:credits": "Кредиты за бой: <font color='#D6D7D4'>{{Credits}}</font>\n",
			"SM:pureCredits": "<font color='#FFCC66'>Доход за бой:</font> <font color='{{c:PureCredits}}'>{{PureCredits}}</font>\n"
		},
			
		// Список цветовых подстановок. "название_макроса": [{"value": значение,  "color": "#код_цвета"}, {"value": значение,  "color": "#код_цвета"}]
		// List of color permutations. "macro_name": [{"value": value,  "color": "#color_code"}, {"value": value,  "color": "#color_code"}]
		"colors": {
			"PureCredits": [
				{ "value": 0,		"color": "#F01818" },
				{ "value": 1,		"color": "#D6D7D4" },
				{ "value": 999999999,	"color": "#00CC00" }
			]
		}
	}
