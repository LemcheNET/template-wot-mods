<!-- My Modpack is available at http://www.statswhore.net -->

<Spotted>

	<!-- Enable Logging -->
	<logging>false</logging>

	<!-- Enable or Disable the Mod --> 
	<hotKey>KEY_F11</hotKey>
	
	<!-- Disable Spotted Mod in Battle Types-->
	<disableInRandomBattle>true</disableInRandomBattle>
	<disableInTrainingBattle>false</disableInTrainingBattle>
	<disableInCompanyBattle>false</disableInCompanyBattle>
	<disableInCybersportBattles>false</disableInCybersportBattles>
	<disableInStrongholdBattle>false</disableInStrongholdBattle>
	<disableInClanwarsBattle>false</disableInClanwarsBattle>
	
	<!-- Activate Mod if less then X Player are alive in Random Battles -->
	<showWhenLessInRandom>15</showWhenLessInRandom>
	
	<!-- Activate Mod if less then X Player are alive in other Battle Types -->
	<showWhenLess>15</showWhenLess>
	
	<!-- Enable the Mod for the following Vehicle Types:
		 HeavyTank, MediumTank, LightTank, AT-SPG, SPG -->
	<enabledForVehicleType>HeavyTank, MediumTank, LightTank, AT-SPG, SPG</enabledForVehicleType>

	<!-- Use the Platoon Chat if available -->
	<useSquadChat>true</useSquadChat>
	
	<!-- Call HELPME Command when Spotted -->
	<helpMeCommand>true</helpMeCommand>
	
	<!-- Displayed Spotted Message -->
	<spottedMessage>Im Spotted at {cell}!</spottedMessage>
	
	<!-- Show Unspotted Message after XX seconds -->
	<unSpottedMessageOn>true</unSpottedMessageOn>
	<unSpottedMessageTimer>10</unSpottedMessageTimer>
	<unSpottedMessage>You are {time} seconds unspotted. Maybe you are safe.</unSpottedMessage>
	
</Spotted>

