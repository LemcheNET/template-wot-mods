{
	"safeShot": {
		"disableKey": "KEY_LALT", // Key to turn off mod
		
		/* I shot the lock switch on the destroyed tanks */
		"deadShot": {
			"blockShot": true,  // Switching on and off the element (true - enabled, false - off)
			"blockTimeout": 5.0, // Block time of fire at the target after the destruction
			"considerGunDirection": true // Observe the direction of weapon (if not illuminated circuit)
		},
		
		/* I shot the lock switch on allies */
		"teamShot": {
			"blockShot": true,			// Switching on and off the element (true - enabled, false - disabled)
			"blockBlueShot": false,	   // Block fire on "stuffed cabbage" allies
			"sendChatMessage": true,	  // To send a chat message when blocking a shot
			"chatMessageInterval": 5.0,   // Interval of sending identical messages
			"considerGunDirection": true, // Observe the direction of weapon (if not illuminated circuit)
			"chatMessage": "{name} {clan} ({vehicle}), do not bother to shoot> = O "// Message allowed macros {name} -!. The player's name, {clan} - Players and {vehicle} - Player Tank
		},
		
		/* Switch lock useless shot */
		"wasteShot": {
			"blockShot": false,  // Switching on and off the element (true - enabled, false - disabled)
			"aimMode": ["arcade", "sniper", "strategic"] // arcade - arcade mode, sniper - sniper mode, strategic - art mode
		},
		
		/* Posted on sight when blocking shots * /
		"shotBlock": {
			"blockMessage": true, // Switching on and off the element (true - enabled, false - disabled)
			"reason": {
				"teamShot":  "teamShot",  // Fire allies
				"deadShot":  "deadShot",  // Shooting in the body
				"wasteShot": "wasteShot"  // Shooting deliberately off target
			},
			"shotBlockMessage": "[{reason}] shot blocked." // Message text. Enable macros {reason} - type of blocked shots
		}
	}
}
